public interface ClientInterface {
	/**
	 * 发送数据请求
	 * @param @param str
	 * @param @return
	 * @param @throws Exception 
	 * @return String
	 */
	public String request(String str) throws Exception ;
	
	/**
	 * 释放资源
	 * @param  
	 * @return void
	 */
	public void shutdownNetwork();
	
	/**
	 * 网络状态是否OK
	 * @param @return 
	 * @return boolean
	 */
	public boolean isOK();
}
