<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="300dip"
        android:layout_height="150dip"
        android:background="@drawable/background"
        android:layout_marginTop="140dip"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="82dip"
        android:padding="10dip" 
        android:orientation="horizontal">
        <ImageView android:id="@+id/iamgeview"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/dialog_icon"
            android:layout_gravity="center"
            ></ImageView>  
        <TextView android:id="@+id/dialog_text"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:textSize="16sp"
            android:textColor="#b0000000"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
           
       <Button android:id="@+id/negative_button"
	       android:layout_width="94dip"
	       android:layout_height="38dip"
	       android:background="@drawable/dialog_button_cancel"
	       android:textColor="#ffffff"
	       android:text="@string/cancel_action"/>
       <Button android:id="@+id/positive_button"
           android:layout_width="94dip"
           android:layout_height="38dip"
           android:layout_marginLeft="16dip"
           android:background="@drawable/dialog_button_confirm"
           android:textColor="#ffffff"
           android:text="@string/rename_action"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>